{
    "version": 2,
    "builds": [
        {
            "src": "apps/web/package.json",
            "use": "@vercel/next"
        },
        {
            "src": "apps/backend/app/main.py",
            "use": "@vercel/python"
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "apps/backend/app/main.py"
        },
        {
            "source": "/(.*)",
            "destination": "apps/web/$1"
        }
    ]
}