{
    "version": 2,
    "buildCommand": "pnpm build",
    "installCommand": "pnpm install",
    "functions": {
        "apps/backend/app/main.py": {
            "runtime": "@vercel/python"
        }
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/apps/backend/app/main.py"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/apps/web/$1"
        }
    ]
}